<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/c"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="200dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:background="#ff0000" >

        <TextView
            android:id="@+id/ticketInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket Info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/category_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticketInfo"
            android:text="Category-1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/from_User_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_1"
            android:text="From-UserName"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_User_Name"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="serif" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lay1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lay1" >

        <ImageView
            android:id="@+id/icon_attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_below="@+id/lay1"
        android:background="#00ff00" >

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0000ff" />

        <TextView
            android:id="@+id/facebookDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="Facebook Detail"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/icon_fb"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/facebookDetail"
            android:layout_toRightOf="@+id/facebookDetail"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/fb_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebookDetail"
            android:text="Fb-Message"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_message"
            android:text="Organization"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="serif" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_below="@+id/lay2"
        android:background="#0000ff" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff0000" />

        <TextView
            android:id="@+id/relatedTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related Tickets"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relatedTickets"
            android:text="Under Construction Come Back After Some Time" />
    </RelativeLayout>

</RelativeLayout>